{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,

        "removeComments": true,
        "noErrorTruncation": true,

        "outDir": "dist",
        "baseUrl": "./src/",
        "typeRoots": [
            "node_modules/vue/types",
            "node_modules/@types"
        ],
        "paths": {
            "@/*": ["*"],
            "*": ["../node_modules/*"]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}
